@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sira = 1;
}


    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Admin Listesi</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        

                        <a href="/Admin/Add" class="btn btn-success btn-sm"><i class="fas fa-plus"></i>Ekle</a>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Şifre</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@sira</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>
                                <td><a class="btn btn-danger btn-sm" href="/Admin/Delete/@item.AdminID"><i class="fas fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-warning btn-sm" href="/Admin/Edit/@item.AdminID"><i class="fas fa-cog"></i>Düzenle</a></td>
                                
                            </tr>
                            sira++;
                        }


                    </tbody>
                </table>
            </div>
            
        </div>
      
    </div>


