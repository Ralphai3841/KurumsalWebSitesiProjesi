@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h4>Hakkımızda Düzenleme Sayfası</h4>
<hr />

<div class="col-md-12">
    <form asp-action="Index" asp-controller="About" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AboutID" />
        <div class="form-group">
            <label asp-for="Title" class="control-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Açıklama</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description2" class="control-label">Açıklama 2</label>
            <input asp-for="Description2" class="form-control" />
            <span asp-validation-for="Description2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label">Resim</label>
            <input asp-for="ImageUrl" type="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="float-left">
                <a class="btn btn-secondary btn-sm" asp-action="Index">Geri Dön</a>
            </div>
            <div class="float-right">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>

        </div>
    </form>
</div>
